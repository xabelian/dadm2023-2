<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal">


    <TableLayout
        android:id="@+id/play_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow>
            <com.example.tictacgame.BoardView
                android:id="@+id/board"
                android:layout_width="354dp"
                android:layout_height="333dp"
                android:layout_marginTop="5dp">


            </com.example.tictacgame.BoardView>
        </TableRow>

        <!-- Row 1: Information -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/information"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Information"
                android:textColor="#000000"
                android:textSize="20dp" />

        </TableRow>

        <!-- Row 2: User Wins -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/player_score_label"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Your Wins"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/player_score"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <!-- Row 3: Ties -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tie_score_label"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Ties"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tie_score"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <!-- Row 4: Computer Wins -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/computer_score_label"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Computer Wins"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/computer_score"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

</LinearLayout>
